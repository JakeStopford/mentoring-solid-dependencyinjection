@model RocketLeague.Website.ViewModels.RocketLeagueViewModel

<div class="text-center">
    <h1 class="display-4">Welcome to rocket league</h1>
    <br />
    <br/>
    <h3 class="display-6">Here are the vehicles you can choose from</h3>
    <br/>
    <div class="container">

        <div class="row">

            @foreach (var vehicle in Model.Vehicles)
            {
                <div class="col-sm-4 mb-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@vehicle.Name</h5>
                            <p class="card-text">@vehicle.Description</p>
                            <p class="card-text"><strong>Hit box: </strong>@vehicle.Hitbox</p>
                            <p class="card-text"><strong>Release Date: </strong>@vehicle.ReleaseDate</p>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>

</div>
